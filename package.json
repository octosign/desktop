{
  "name": "com.octosign",
  "version": "0.6.0-dev",
  "description": "Desktop electronic signature software",
  "main": "./out/main/index.js",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "i18next": "^23.7.3",
    "i18next-browser-languagedetector": "^7.2.0",
    "mime-types": "^2.1.35",
    "react": "^17.0.0",
    "react-i18next": "^13.4.0",
    "sanitize-filename": "^1.6.3",
    "split2": "^4.2.0",
    "tmp-promise": "^3.0.3",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@fontsource/roboto": "^5.0.8",
    "@material-ui/core": "^4.12.4",
    "@material-ui/icons": "^4.11.3",
    "@percy/cypress": "^3.1.2",
    "@testing-library/react": "^12.1.0",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.9.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-signature-canvas": "^1.0.5",
    "@types/split2": "^4.2.3",
    "@types/styled-components": "^5.1.30",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-istanbul": "^0.34.6",
    "ajv": "^8.12.0",
    "babel-preset-es2015": "^6.24.1",
    "codecov": "^3.8.3",
    "cypress": "^13.5.0",
    "date-fns": "^2.30.0",
    "electron": "^27.0.4",
    "electron-builder": "^24.6.4",
    "electron-notarize": "^1.2.2",
    "electron-vite": "^1.0.28",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "i18next-conv": "^14.0.0",
    "i18next-scanner": "^4.4.0",
    "interactjs": "^1.10.20",
    "jest": "^29.7.0",
    "jsdom": "^22.1.0",
    "jss": "10.10.0",
    "notistack": "^3.0.1",
    "pdfjs-dist": "^3.0.0",
    "prettier": "3.0.3",
    "react-dom": "^17.0.0",
    "react-dropzone": "^14.2.3",
    "react-markdown": "^8.0.0",
    "react-signature-canvas": "^1.0.6",
    "spectron": "^19.0.0",
    "start-server-and-test": "^2.0.2",
    "styled-components": "^6.1.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6",
    "vitest-canvas-mock": "^0.3.3"
  },
  "scripts": {
    "start": "electron-vite preview",
    "start:cy": "cypress open",
    "dev": "electron-vite dev",
    "build": "npm run build:translations && npm run build:electron",
    "build:electron": "electron-vite build",
    "build:backends": "node ./backends/build.mjs",
    "build:translations": "node ./scripts/translations.mjs build",
    "extract:translations": "node ./scripts/translations.mjs extract",
    "test": "npm run test:lint && npm run test:types && npm run test:unit -- --coverage",
    "test:lint": "eslint --ext .ts --ext .tsx src/",
    "test:types": "tsc --noEmit -p tsconfig.node.json --composite false && tsc --noEmit -p tsconfig.web.json --composite false",
    "test:unit": "vitest",
    "test:ui": "start-server-and-test start http://localhost:5173 \"percy exec -- cypress run\"",
    "test:smoke": "node smoke.mjs",
    "dist": "electron-builder",
    "clean": "rm -rf dist && rm -rf .cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/durasj/octosign.git"
  },
  "keywords": [
    "signature",
    "electronic",
    "desktop",
    "seal",
    "xades",
    "pades",
    "cades"
  ],
  "author": "Jakub Duras <jakub@duras.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/durasj/octosign/issues"
  },
  "homepage": "https://github.com/durasj/octosign#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "Electron 27.0"
  ],
  "build": {
    "appId": "me.duras.octosign",
    "productName": "Octosign",
    "copyright": "Copyright © 2019 Jakub Ďuraš",
    "files": [
      "dist${/*}"
    ],
    "extraResources": [
      {
        "from": "backends/dist",
        "to": "backends"
      }
    ],
    "directories": {
      "buildResources": "res",
      "output": "artifacts"
    },
    "mac": {
      "category": "public.app-category.business",
      "target": "default",
      "hardenedRuntime": true,
      "entitlements": "res/entitlements.mac.plist",
      "entitlementsInherit": "res/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "publish": {
      "provider": "github",
      "owner": "durasj"
    },
    "afterSign": "scripts/notarize.mjs"
  }
}
